.alert
  display inline-block
  padding $label-padding
  background-color red
  color            white
  white-space pre
  border-radius $label-border-radius
  border $label-border
  width 100%
  text-align: center

.centered
  display inline-block
  padding $label-padding
  background-color $label-bg-color
  color            $label-txt-color
  white-space pre
  border-radius $label-border-radius
  border $label-border
  width 100%
  text-align: center

.avatar
  text-align center
  display block
  width  6vmin
  height 6vmin
  overflow hidden
  border-radius 50%
  margin-right auto
  margin-left auto

    img
      max-width  100%
      max-height 100%